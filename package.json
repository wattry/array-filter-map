{
  "name": "@wattry/array-filter-map",
  "version": "1.0.0",
  "description": "A JavaScript polyfill for implementing an Array prototype function to filter and map an array",
  "keywords": [],
  "author": "",
  "scripts": {
    "build": "concurrently 'rm -rf ./dist' 'pnpm:build:esm' 'pnpm:build:types'",
    "build:cjs": "tsup src --tsconfig ./tsconfig.cjs.json --format cjs -d dist --cjsInterop --splitting",
    "build:esm": "tsup src --tsconfig ./tsconfig.json --format esm -d dist",
    "build:pack": "pnpm build && pnpm pack",
    "build:types": "tsup src --tsconfig ./tsconfig.json --format esm -d dist --dts-only",
    "clean": "rm -rf node_module dist",
    "dev": "node --loader ts-node/esm --watch=./src ./src/index.ts",
    "lint": "eslint --no-warn-ignored src/**/*.ts",
    "lint:config": "pnpx @eslint/config-inspector@latest --config ./eslint.config.js",
    "lint:fix": "eslint --fix --no-warn-ignored src/**/*.ts",
    "start": "node ./dist/esm/index.js",
    "start:cjs": "node ./dist/cjs/index.cjs",
    "test": "vitest --run --config ./vitest.config.ts",
    "test:ci": "vitest --run --coverage --passWithNoTests --silent --config ./vitest.config.js",
    "test:watch": "vitest --passWithNoTests --watch --config ./vitest.config.ts",
    "upgrade:all": "pnpm update --latest",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/config-inspector": "1.0.0",
    "@eslint/js": "9.19.0",
    "@stylistic/eslint-plugin": "3.0.0",
    "@types/eslint__js": "8.42.3",
    "@types/node": "22.10.10",
    "@vitest/browser": "3.0.4",
    "@vitest/coverage-v8": "3.0.4",
    "concurrently": "9.1.2",
    "dotenv": "16.4.7",
    "dotenv-expand": "12.0.1",
    "eslint": "9.19.0",
    "eslint-plugin-n": "17.15.1",
    "globals": "15.14.0",
    "husky": "9.1.7",
    "playwright": "1.50.0",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "tsup": "8.3.6",
    "typescript": "5.7.3",
    "typescript-eslint": "8.21.0",
    "vitest": "3.0.4"
  },
  "files": [
    "dist",
    "types"
  ],
  "type": "module",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "license": "Apache-2.0"
}
